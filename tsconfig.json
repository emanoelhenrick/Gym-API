{
  "compilerOptions": {
    "target": "ES2020",                    
    "module": "NodeNext",                 
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "build",
    "strict": true,         
    "noImplicitAny": true
  },
  "include": [
    "src",
    "test"
  ]
}